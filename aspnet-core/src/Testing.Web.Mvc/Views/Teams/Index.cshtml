@using Testing.Web.Startup
@{ ViewBag.Title = L("Team");
    ViewBag.CurrentPageName = PageNames.Teams; }
@section scripts
{
    <script src="~/view-resources/Views/Teams/index.js" asp-append-version="true"></script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Teams")</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#TeamCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>
<div class="card-body">
    <div class="table-responsive">
        <table id="TeamsTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>@L("Name")</th>
                    <th style="width: 150px">@L("Actions")</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("~/Views/Teams/_CreateModal.cshtml")

<div class="modal fade" id="TeamEditModal" tabindex="-1" role="dialog" aria-labelledby="TeamEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
